<included>
    <appender name="Console"
              class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>
                %red(%d{ISO8601}) %highlight(%-5level) [%blue(%t)] %yellow(%C{1}.%M.%L): %msg%n%throwable
            </Pattern>
        </layout>
    </appender>
</included>